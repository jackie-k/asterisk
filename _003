
public class asterisk_003 {

	public static void main(String[] args) {
	    
		for(int i=1; i<=5; i+=2) {
	          for(int j=i/2; j<=1; j++) {
	             System.out.print(" ");
	          }
	          for(int j=1; j<=i; j++) {
	             System.out.print("*");
	          }
	          System.out.println();
	       }

	}

}
